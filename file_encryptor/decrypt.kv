<DecryptScreen@Screen>:
    name: 'decrypt'

    BoxLayout:
        orientation: "vertical"

        MDFloatLayout:

            MDCard:
                padding: 4
                pos_hint: {"center_x": 0.5, "center_y": 0.8}
                size_hint: None, None
                size: "180dp", "50dp"
                line_color: '#008080'

            MDLabel:
                id: selected_file
                text: "Decryption"
                pos_hint: {"center_x": .5, "center_y": .8}
                halign: "center"
                font_size: "25dp"

            MDTextField:
                id: password
                hint_text: "Input Passphrase:"
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: .5
                icon_left: "key-variant"
                password: True

            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_x": 0.73, "center_y": 0.5}
                pos: password.width - self.width + dp(8), 0
                theme_text_color: "Hint"
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    password.password = False if password.password is True else True

            MDLabel:
                id: use_password
                text: "Use Password?      N/Y"
                pos_hint: {"x": .25, 'center_y': .4}

            MDSwitch:
                id: switch2
                pos_hint: {'center_x': .5, 'center_y': .4}
                active: True
                icon_inactive_color: "grey"

            MDFillRoundFlatIconButton:
                id: decrypt_file
                text: "Decrypt File"
                icon: "folder"
                pos_hint: {"center_x": .5, "center_y": .25}
                size_hint: (None, None)
                on_release: root.open_keyfile()



